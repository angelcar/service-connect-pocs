{
    "family": "sc-pingpong-awsvpc",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::901447253822:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::901447253822:role/TaskIAMRoleArn",
    "containerDefinitions": [
        {
            "name": "pingpong-server",
            "image": "public.ecr.aws/u5s6c6g2/sc-poc-pingpong:latest",
            "memory": 128,
            "cpu": 100,
            "portMappings": [
                {
                    "containerPort": 8080
                },
                {
                    "containerPort": 9090
                }
            ],
            "dockerLabels": {
                "name": "pingpong-server"
            }
        },
        {
            "name": "service-connect",
            "image": "public.ecr.aws/u5s6c6g2/sc-poc-pingpong-envoy",
            "memory": 1024,
            "cpu": 100,
            "dockerLabels": {
                "name": "appnet-agent"
            },
            "environment": [
                {
                    "name": "SC_CONFIG",
                    "value": "{}"
                }
            ],
            "healthCheck": {
              "retries": 3,
              "command": [
                  "CMD-SHELL",
                  "sleep 1"
              ],
              "timeout": 3,
              "interval": 30,
              "startPeriod": 2
          }
        }
    ]
}